<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="25pt"
        tools:context=".HomeActivity">
    <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/crud_btn"
            android:textAllCaps="false"
            android:text="Crud Operation"/>
    <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bwrite_btn"
            android:textAllCaps="false"
            android:text="Batch Write"/>
    <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mdoc_btn"
            android:textAllCaps="false"
            android:text="Multiple Document"/>
    <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pagination_btn"
            android:textAllCaps="false"
            android:text="Pagination"/>
    <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subcoll_btn"
            android:textAllCaps="false"
            android:text="Sub Collections"/>
    <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trans_btn"
            android:textAllCaps="false"
            android:text="Transaction"/>


</LinearLayout>