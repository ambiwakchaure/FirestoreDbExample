<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"


        tools:context=".CrudActivity">
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_margin="20pt"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_height="fill_parent">
        <EditText android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/title_et"
                  android:imeOptions="actionNext"
                  android:hint="Title"/>
        <EditText android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/desc_et"
                  android:imeOptions="actionNext"
                  android:layout_marginTop="6pt"
                  android:hint="Description"/>
        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submit_btn"
                android:layout_marginTop="6pt"

                android:textAllCaps="false"
                android:text="Submit"/>
        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loadnote_btn"

                android:textAllCaps="false"
                android:text="Load Note"/>
        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/updatedesc_btn"
                android:textAllCaps="false"
                android:text="Update Description"/>

        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deletedesc_btn"
                android:textAllCaps="false"
                android:text="Delete Description"/>

        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deletenote_btn"
                android:textAllCaps="false"
                android:text="Delete Note"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="2pt"
                  android:id="@+id/text_view_data"/>

    </LinearLayout>


    <ProgressBar android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:visibility="invisible"
                 android:layout_centerVertical="true"
                 android:layout_centerHorizontal="true"
                 android:id="@+id/progress_bar"/>
</RelativeLayout>